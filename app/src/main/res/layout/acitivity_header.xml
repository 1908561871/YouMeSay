<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/toolbar_style.with_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        >
        <ImageButton
            android:id="@+id/iv_back"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/iv_menu"
            android:visibility="gone"
            style="@style/base_wrap_center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_size_10" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:paddingRight="@dimen/padding_size_10"
            style="@style/base_wrap_center_vertical.text_white_size_15" />
        <TextView
            android:id="@+id/tv_title"
            style="@style/base_wrap_center.text_white_size_17"
            android:text="@string/app_name" />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>